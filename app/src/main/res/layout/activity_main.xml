<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="128dp"

        android:background="#de2114" />

    <TextView
        android:id="@+id/ifood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36dp"
        android:text="iFood"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28dp" />


    <ImageView
        android:id="@+id/clock"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:srcCompat="@drawable/clock"

        />

    <TextView
        android:id="@+id/horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:text="Horarios"
        app:layout_constraintLeft_toLeftOf="@+id/clock"

        app:layout_constraintRight_toRightOf="@+id/clock"
        app:layout_constraintTop_toBottomOf="@+id/clock" />

    <ImageView
        android:id="@+id/food"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="64dp"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="@+id/clock"
        app:srcCompat="@drawable/food" />

    <TextView
        android:id="@+id/comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Comida"

        app:layout_constraintLeft_toLeftOf="@+id/food"
        app:layout_constraintRight_toRightOf="@+id/food"
        app:layout_constraintTop_toBottomOf="@+id/food" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"


        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/horario" />


    <TextView
        android:id="@+id/anuncio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Aproveite as promoções do iFood e faça\n já o seu pedido"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/promocoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="16dp"
        android:text="Promoções"
        android:textSize="26dp"
        app:layout_constraintTop_toBottomOf="@id/anuncio" />

    <TextView
        android:id="@+id/promo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"

        android:paddingLeft="16dp"
        android:text="> Hamburguer na promoção por R$6,99"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/promocoes" />

    <TextView
        android:id="@+id/promo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:paddingLeft="16dp"
        android:text="> Jantinha com espeto - R$18,00"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/promo1" />


    <TextView
        android:id="@+id/promo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:paddingLeft="16dp"
        android:text="> Açai leite ninho e nutella 500 - R$21,99"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/promo2" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Comprar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/promo3" />


</androidx.constraintlayout.widget.ConstraintLayout>
