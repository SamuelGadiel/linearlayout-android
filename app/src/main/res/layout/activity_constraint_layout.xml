<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009b7f"
    android:paddingHorizontal="16dp"
    android:paddingVertical="196dp"
    tools:context=".ConstraintLayout">


    <EditText

        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"


        android:hint="Email"
        android:paddingHorizontal="16dp"

        />

    <EditText

        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:hint="Senha"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/email"

        />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#C3C7C6"

        android:text="LOGIN"

        android:textColor="#009b7f"
        app:layout_constraintTop_toBottomOf="@id/password"

        />

    <Button
        android:id="@+id/createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0FFF"
        android:outlineProvider="none"


        android:text="Ainda não é cadastrado? Cadastre-se"
        android:textColor="@color/material_dynamic_neutral90"
        app:layout_constraintTop_toBottomOf="@id/login"

        />

</androidx.constraintlayout.widget.ConstraintLayout>